            <% if (is_publications === 1) { %>
                <div class="article">
                    <%- partial("publications") %>
                </div>
            <% } else if (is_projects === 1) { %>
                <div class="article">
                    <%- partial("projects") %>
                </div>
            <% } else { %>
                <%- partial(type) %>
            <% } %>
            <%- partial("footer") %>
        </div>
        <% } %>
        <% if (theme.preview.enable) { %>
